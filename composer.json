{
    "name": "moonshine/dropzone",
    "description": "Dropzone file uploader for MoonShine",
    "keywords": ["moonshine", "dropzone"],
    "type": "library",
    "homepage": "https://dmitryfx.com",
    "license": "MIT",
    "support": {
        "issues": "https://dmitryfx.com",
        "source": "https://dmitryfx.com"
    },
    "authors": [
        {
            "name": "DmitryFX",
            "email": "i@dmitryfx.com",
            "homepage": "https://dmitryfx.com"
        }
    ],
    "require": {
        "php": "^8.0|^8.1|^8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "laravel/framework": "^v12.0",
        "moonshine/moonshine": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.8",
        "mockery/mockery": "^1.4.4",
        "phpstan/phpstan": "^1.4.7",
        "brianium/paratest": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "MoonShine\\Dropzone\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MoonShine\\Dropzone\\Tests\\": "tests/",
            "MoonShine\\Dropzone\\Database\\Factories\\": "database/factories/"
        }
    },
    "conflict": {
        "moonshine/moonshine": "<1.52"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "extra": {
        "laravel": {
            "providers": [
                "MoonShine\\Dropzone\\Providers\\DropzoneServiceProvider"
            ]
        }
    }
}
